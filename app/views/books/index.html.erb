<body>
  <p id="notice"><%= notice %></p>
  
  <table>
    <thead>
         <h1>Books</h1>
         <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
         </tr>
    </thead>
        <tbody>
        <% @book.each do |book| %>
        <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
         <td><%= link_to 'Show', book %></td>
         <td><%= link_to 'Edit', edit_book_path(book) %></td>
         <td><%= link_to 'Destroy', book, method: :delete %></td>
        </tr>
         <% end %>
        </tbody>
  </table>

<h2>New book</h2>

<%= form_with model: @books, local:true do |f| %>
    <% if @books.errors.any? %>
    <div id="error_explanation">
     <h2><%= pluralize(@books.errors.count, "error") %> prohibited this article from being saved</h2>
    <ul><% @books.errors.full_messages.each do |massege| %>
        <li><%= massege %></li>
    </ul>
      </div> 
      <% end %>
    <% end %>
    <div class="field"> 
       <label for="book_title">Title</label>
    </div>
     <%= f.text_field :title %>
     
    <div class="field"> 
      <label for="book_body">Body</label>    
    </div>
      <%= f.text_area :body %>
     
    <div class="actions">
      <%= f.submit 'Create Book' %>
    </div>
<% end %>